<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- FullScreen theme. -->
    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="style_lb" parent="TextAppearance.AppCompat">
<!--        <item name="android:textColor">#0042ff</item>-->
        <item name="android:textColor">#000</item>
    </style>

    <style name="style_lb_italic" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#0042ff</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="style_spinner_dialog">
        <item name="android:spinnerMode">dialog</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textSize">8sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem"></style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:padding">5dp</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:translationY">3dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="hintTextAppearanceCustom" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#224c85</item>
    </style>

    <style name="DayOfWeekStyle">
        <item name="android:padding">5dp</item>
    </style>

    <style name="header_tbl_status_color_course">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/bg_header_tbl_status_color_course</item>

    </style>

    <style name="row_tbl_status_color_course">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="header_table">
        <item name="android:gravity">center</item>
    </style>

    <style name="et_create_course_act">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:background">@android:drawable/editbox_background_normal</item>
    </style>

    <style name="tv_create_course_act">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="spinner_create_course_act">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:colorForegroundInverse">@android:color/darker_gray</item>
        <item name="android:layout_weight">3</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>
